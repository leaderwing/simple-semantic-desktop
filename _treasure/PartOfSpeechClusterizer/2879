    private void clusterButtonMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_clusterButtonMouseClicked
// TODO add your handling code here:		
	Set<Set<AkshatDocument>> s = p.makeClusters(posList.getSelectedValues(),10,false);
	Object[] objectArray = new Object[s.size()];
	Iterator it1= s.iterator();
	int i=0;
	while(it1.hasNext()){
		Set<AkshatDocument> c= it1.next();
		String[] innerObjectArray = new String[c.size()];
		Iterator it2= c.iterator();
		int j=0;
		while(it2.hasNext()){
			AkshatDocument currentDoc = it2.next();
			innerObjectArray[j]="cluster" + i + "." + currentDoc.name;
			j++;
		}
		objectArray[i]=innerObjectArray;
		i++;		
	}	
	clusterTree.setModel(javax.swing.JTree.createTreeModel(objectArray));
	
	//TODO:add code for creating table
	
    }//GEN-LAST:event_clusterButtonMouseClicked

