
import java.awt.*; 
import java.awt.event.*; 
 

public class POSClusterApp extends Frame { 
    int WINDOW_WIDTH=0;
    int WINDOW_HEIGHT=0;

    public POSClusterApp(Object[] partsOfSpeech) { 
    super("BasicApplication Title"); 
    setSize(200, 200); 


    add(new Label("Part of Speech:"));
Choice posSelected = new Choice(); 
for(int i=0;i<partsOfSpeech.length;i++)    
    posSelected.add((String)partsOfSpeech[i]);  
    add(posSelected); 


    addWindowListener(new WindowAdapter() { 
      public void windowClosing(WindowEvent e) { 
        setVisible(false); dispose(); 
        System.exit(0); 
      } 
    }); 

    
 } 
   
}